<odoo>
    <data>

       <record id="view_partner_form_inherit" model="ir.ui.view">
          <field name="name">res.partner.inherit</field>
          <field name="model">res.partner</field>
          <field name="inherit_id" ref="base.view_partner_form"/>
          <field name="arch" type="xml">
              <xpath expr="//field[@name='vat']" position="after" >
                <field name="partner_member_types" attrs="{'invisible': [('is_company','=', True)]}"/>
                <field name="partner_blood_groups" attrs="{'invisible': [('is_company','=', True)]}"/>
              </xpath>

              <xpath expr="//page[@name = 'internal_notes']" position="after">
                  <page string="Extra Information" name="extra_installation_information">
                      <group>
                          <field name="partner_birth_place" />
                          <field name="partner_birth_certificate" />
                          <field name="partner_profession_workplace"/>
                          <field name="partner_sector" />
                          <field name="partner_languages" />
                          <field name="partner_family_ngo" />
                          <field name="partner_passport" />
                          <field name="partner_before_ngo" />
                      </group>
                  </page>
              </xpath>
              
          </field>
    </record>
  </data>
</odoo>
